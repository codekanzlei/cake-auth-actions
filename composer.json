{
    "name": "codekanzlei/cake-auth-actions",
    "description": "Simple ACL alternative for CakePHP 3",
    "license": "MIT",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.1.0",
        "cakephp/cakephp": ">= 3.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11",
        "cakephp/cakephp-codesniffer": "^3.1",
        "scherersoftware/coding-standard": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "AuthActions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AuthActions\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "check": [
            "@php-check",
            "@php-check-strict",
            "@phpstan"
        ],
        "php-check": "vendor/bin/phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./config",
        "php-check-strict": "vendor/bin/phpcs -p --standard=vendor/scherersoftware/coding-standard/scherersoftware ./src ./config",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 7 ./src"
    }
}
